<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    android:layout_centerVertical="true"
                    android:id="@+id/close"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:layout="@id/close"
                    android:layout_marginStart="40dp"
                    android:textSize="24dp"
                    android:textColor="@color/black"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your old password"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text=""
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:id="@+id/old_pass_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your new password"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text=""
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:id="@+id/new_pass_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm new password"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/cnfrm_pass_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EXIT"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:background="#B71C1C"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/cancel"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="SAVE"
            android:textColor="@color/white"
            android:background="#33691E"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="25dp"
            android:textSize="20dp"
            android:id="@+id/save"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_reset"
            android:drawablePadding="10dp"
            android:text="Reset your old password using\n           registered email"
            android:textColor="#0D47A1"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:background="#E3E2DF"
            android:id="@+id/reset_pass"/>


</LinearLayout>