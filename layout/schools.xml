<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBEFF3"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#E31515"
        android:id="@+id/school_name"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1.2:1"
            android:scaleType="fitXY"
            tools:ignore="MissingConstraints"
            android:id="@+id/school_pic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="16sp"
        android:background="#FAE7E7"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:id="@+id/school_description"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            android:id="@+id/location_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:layout_centerVertical="true"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/location_pic"
            android:layout_marginStart="5dp"
            android:id="@+id/school_location"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:id="@+id/phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone Number"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/phone"
            android:layout_marginStart="5dp"
            android:id="@+id/school_number"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            android:id="@+id/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone Number"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:layout_toEndOf="@id/email"
            android:layout_marginStart="5dp"
            android:id="@+id/school_email"/>
    </RelativeLayout>

</LinearLayout>